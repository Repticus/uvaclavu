{block title}Nápojový lístek restaurace{/block}
{block content}
<div id="content" class="mnu">
	<h1>Nápojový lístek</h1>
	<table>
		{foreach $drink as $group}
			<tr>
				<td></td>
				<td class="left" colspan="2">
					<h2>{$group['group']}</h2>
				</td>
			</tr>
			{foreach $group['drink'] as $drink}
				<tr>
					<td class="right">
						{$drink['amount']}
					</td>
					<td class="left">
						{$drink['name']|noescape}
						<i n:ifset="$drink['description']">{$drink['description']|noescape}</i>
					</td>
					<td class="right">
						{$drink['price']} Kč
					</td>
				</tr>
			{/foreach}
		{/foreach}
	</table>
</div>
